{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": true,
		"target": "es6",
		"strictFunctionTypes": false,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		},
		"types": ["@types/node"]
	}
}
